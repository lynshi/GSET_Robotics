task main(){

  SetSensorType(S1, SENSOR_TYPE_LOWSPEED);
  TextOut(10, LCD_LINE2,"Color Detected");
  
  while(true){
    
    if ((SensorHTColorNum(S1)) == 2 || (SensorHTColorNum(S1) == 3)
    {
        PlayTone(440,250);
        Wait(4000);
    }
    
    else if(SensorHTColorNum(S1) == 8)
    {
        mode = 2;
    }
      
  }
  
}
